  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "config": "*",
    "tsconfig": "*",
    "tsup": "^6.2.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@rooks/use-mutation-observer": "^4.11.2",
